<section class="container pt-4">
  <p id="notice"><%= notice %></p>
  <h2>Portfolios</h2>
  <div class="row">
    <% @portfolios.each do |portfolio| %>
        <article id="portfolio<%= portfolio.id %>" class="col-12 col-sm-6 col-lg-4 mb-2 mt-2">
          <div class="portfolios">
            <div class="portfolio-top d-flex justify-content-center align-items-center">
              <h3><%= portfolio.title %></h3>
            </div>
            <div class="pf-outside-btn btn-group d-flex justify-content-center align-items-center">
              <%= link_to 'Show', portfolio, class: 'btn btn-primary btn-sm link-btn' %>
              <%= link_to 'Destroy', portfolio, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-primary btn-sm link-btn' %>
            </div>
          </div>
        </article>
    <% end %>
  </div>

  <%= no_portfolio(@portfolios) %>

  <!-- Button trigger modal -->
  <button type="button" id="new_portfolio" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    새 포트폴리오
  </button>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= form_for :portfolio, url: portfolios_path do |f| %>
              <div class="form-group mb-2">
                <label for="portfolio_title">제목을 입력해주세요</label>
                <%= f.text_field :title, required: true, class: 'form-control' %>
              </div>
              <%= f.submit '작성', class: 'btn btn-primary' %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</section>






